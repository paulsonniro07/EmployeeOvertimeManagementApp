@model EmployeeOvertimeManagementApp.Models.Employee

@{
    ViewBag.Title = "Delete Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box box-danger">
    <div class="box-header with-border">
        <h3 class="box-title">Delete Employee</h3>
    </div>

    <div class="box-body">
        <h4 class="text-danger">Are you sure you want to delete this employee?</h4>
        @if (!ViewData.ModelState.IsValid)
        {
            foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <div class="alert alert-danger">@error.ErrorMessage</div>
                }
            }
        }

        <dl class="dl-horizontal">
            <dt>Department</dt>
            <dd>@Model.Department?.DepartmentName</dd>

            <dt>NIK</dt>
            <dd>@Model.NIK</dd>

            <dt>Name</dt>
            <dd>@Model.EmployeeName</dd>

            <dt>Position</dt>
            <dd>@Model.Position</dd>
        </dl>
    </div>

    <div class="box-footer">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
        }
    </div>
</div>
